#!/bin/env bash

# Configuração das variáveis de ambiente

# export EDITOR
export EDITOR="nvim"

# export PAGER
export PAGER="nvim -c 'set ft=man' -"

# export BROWSER
export BROWSER="firefox-developer-edition"

# export BROWSER_CLI
export BROWSER_CLI="w3m"

# export TERMINAL, for ease when changing VTEs
export TERMINAL="st"

# taskwarrior
export TASKRC="$HOME/.config/task/taskrc"
export TASKDATA="$HOME/.config/task/"

# XDG dirs
export XDG_DATA_HOME=${XDG_DATA_HOME:="$HOME/.local/share"}
export XDG_CACHE_HOME=${XDG_CACHE_HOME:="$HOME/.cache"}
export XDG_CONFIG_HOME=${XDG_CONFIG_HOME:="$HOME/.config"}

# GO path
export GOPATH="$XDG_DATA_HOME/go"
export GOBIN="$GOPATH/bin"

# Cargo
export CARGO_HOME="$XDG_DATA_HOME/cargo"
export CARGO_BIN="$CARGO_HOME/bin"

# For java applications
export _JAVA_AWT_WM_NONREPARENTING=1

# Rustup
export RUSTUP_HOME="$XDG_DATA_HOME/rustup"

# Weechat
export WEECHAT_HOME="$XDG_CONFIG_HOME/weechat"

# GTK-2.0
export GTK2_RC_FILES="$XDG_CONFIG_HOME/gtk-2.0/gtkrc"

# GPG
export GNUPGHOME="$XDG_DATA_HOME/gnupg"

# pass
export PASSWORD_STORE_DIR="$XDG_DATA_HOME"/pass""

# Bash
export HISTFILE="/tmp/.`id -nu`-history"

# CUDA
export CUDA_CACHE_PATH="$XDG_CACHE_HOME"/nv

# Stack
export STACK_ROOT="$XDG_DATA_HOME"/stack

# Prompt
#export PS1="$(echo -e '\033[1;36m[\033[32m$USER\033[1;31m@\033[35m$(uname -n)\033[1;36m] \033[1;32m$(basename "$PWD" | sed "s,math,~,")\033[33m $\033[0m: ')"

# the control characters are used so that mksh doesn't go crazy with the escape characters
export PS1="$(echo -e '\033[1;32m$(basename "$PWD" | sed "s,math,~,")\033[33m $\033[0m > ')"

export PATH="$HOME/.local/bin":"$CARGO_BIN":"$GOBIN":$PATH

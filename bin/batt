#!/bin/env bash

batt() {
	batt="$(acpi | awk '{print $4}' | sed -e 's/%,//g')"
	state="$(cat /sys/class/power_supply/BAT0/status)"

	icon=""

	[ "$batt" -e 98 ] && icon="" 

	[ "$batt" -ge 90 ] && icon="" 

	[ "$batt" -le 50 ] && icon="" 
	
	[ "$batt" -le 20 ] && icon="" 
	
	[ "$batt" -le 5 ] && icon="" 

	[ "$state" == "Charging" ] && icon=""

	battery_check "$batt" "$state"

	printf "%s %d%%" "$icon" "$batt"
}

batt

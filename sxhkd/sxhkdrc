#!/bin/bash

# Simple X Hotkey Daemon config

# --- WM-indepedent commands ---

# reload sxhkd
super + r
	pkill -USR1 -x sxhkd; notify-send 'sxhkd' 'Reloaded config'

# spawn terminal
super + Return
	st

# spawn terminal with vim
super + v
	st -e vim ~/vimwiki/index.wiki

# NOTA: O BSPWM vai matar todas as instâncias de alguns programas com essa opção
# Ex.: Firefox. Prefira o bspc node -c.
# kill window
#super + w
#	xdotool getwindowfocus windowkill

# lock the screen
alt + shift + l
	xscreensaver-command --lock

# open Firefox
super + b
	firefox

# open qutebrowser
super + q
	qutebrowser

# open rofi
super + d
	rofi -combi-modi window,drun,run,ssh -theme slate -font "gohu gohufont 11" -show combi -icon-theme "la-capitaine"

# print selection with scrot
@Print
	scrot -s "%Y-%m-%d_$wx$h.png" -e 'mv $f /home/math/Imagens/Prints'

# media keys
XF86AudioLowerVolume
	pulsemixer --change-volume -5

XF86AudioRaiseVolume
	pulsemixer --change-volume +5

XF86AudioMute
	pulsemixer --toggle-mute

XF86AudioMicMute
	pulsemixer --id source-1 --toggle-mute

XF86AudioPlay
	mpc toggle

XF86AudioPrev
	mpc prev

XF86AudioNext
	mpc next

# backlight control
XF86MonBrightnessUp
	xbacklight -inc 10

XF86MonBrightnessUp
	xbacklight -dec 10

# --- BSPWM specific ---

# kill X/Restart BSPWM
super + shift + {q,r}
	bspc {quit,wm -r}; notify-send 'bspwm' 'Restarted'

# close window
super + w
	bspc node -c 

# toggle Monocle layout
super + shift + m
	bspc desktop -l next

# set node state (change layout of individual node)
super + {t, shift + space, f}
	bspc node -t {tiled, \~floating, \~fullscreen}

# move/resize floating windows with mouse
super + {left click, right click}
	bspc config {pointer_action1 move, pointer_action2 resize_side}

# move a floating window
super + shift + {Left,Down,Up,Right}
	bspc node -v {-40 0,0 40,0 -40,40 0}

# center a floating window in the screen

# toggle node sticky (in all desktops)
super + i
	bspc node -g sticky

# Focus windows
super + {h,j,k,l}
	bspc node -f {west, south, north, east}

# Focus the next/previous window in the current desktop
super + {_,shift + }a
	bspc node -f {next,prev}.local.!hidden.window

# expand a window by moving one of its side outward
super + ctrl + {h,j,k,l}
	bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

# contract a window by moving one of its side inward
super + ctrl + shift + {h,j,k,l}
	bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

# focus on desktop
super + {1-9,0}
	bspc desktop -f '^{1-9,10}'

# send window to desktop and focus on it
super + shift + {1-9,0}
	bspc node -d '^{1-9,10}' --follow

# Focus the next/previous desktop in the current monitor
super + {n,m}
	bspc desktop -f {prev,next}.local

# Focus the last node/desktop
super + Tab
	bspc desktop -f last

# preselect direction
super + {Left,Down,Up,Right}
	bspc node -p {west,south,north,east}

# swap node in direction
super + shift + {h,j,k,l}
	bspc node -s {west,south,north,east} --follow
